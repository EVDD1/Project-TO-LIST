<Window x:Class="TODO_lijst.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TODO_lijst"
        mc:Ignorable="d"
        Title="TODO-lijst" SizeToContent="Height" Width="800" FontSize="20">
    <StackPanel Margin="10">
        <GroupBox Header="Taak toevoegen">
            <StackPanel>
                <Grid>
                    <TextBox Name="txtbxtoevoegen" Margin="10" ></TextBox>
                    <Button Click="Button_Click_3" Margin="10" HorizontalAlignment="Right">Opslaan</Button>
                </Grid>
               
                <Button Click="Button_Click_2" Margin="10">Toevoegen</Button>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="TODO-lijst">
            <StackPanel>
                <ListBox Name="listBox" MouseUp="listBox_MouseUp" Margin="10"></ListBox>
                <Button Click="Button_Click" Margin="10" >Verwijderen</Button>
                <TextBox Name="txtbxVervangen" Margin="10" ></TextBox>
                <Button Click="Button_Click_1" Margin="10" >Vervangen</Button>
            </StackPanel>

        </GroupBox>

       
    </StackPanel>
</Window>
